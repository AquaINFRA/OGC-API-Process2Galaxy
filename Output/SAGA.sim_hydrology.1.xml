<tool id="SAGA.sim_hydrology.1" name="Kinematic Wave Overland Flow" version="1.0.0"><description>This is a simple tool that simulates overland flow with a kinematic wave approach. It is not designed for operational usage. Rather it should give an idea about some principles of dynamic simulation techniques and thus it might become a starting point for more sophisticated and applicable simulation tools. </description><inputs><param name="DEM" label="Elevation" help="Elevation" type="text" format="image/tiff, application/x-ogc-envi, application/x-ogc-aaigrid, image/png" /><param name="ROUGHNESS" label="Manning Roughness" help="Manning Roughness" type="text" format="image/tiff, application/x-ogc-envi, application/x-ogc-aaigrid, image/png" /><param name="ROUGHNESS_DEFAULT" label="Default" help="default value if no grid has been selected" type="float" format="image/tiff, application/x-ogc-envi, application/x-ogc-aaigrid, image/png" /><param name="GAUGES" label="Gauges" help="Gauges" type="data" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="TIME_SPAN" label="Simulation Time [h]" help="Simulation Time [h]" type="float" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="TIME_STEP" label="Simulation Time Step [min]" help="Simulation Time Step [min]" type="float" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="TIME_UPDATE" label="Map Update Frequency [min]" help="If zero each simulation time step will update the flow map." type="float" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="MAXITER" label="Maximum Iterations" help="Maximum Iterations" type="integer" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="EPSILON" label="Epsilon" help="Epsilon" type="float" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="ROUTING" label="Flow Routing" help="Flow Routing" type="text" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="DYNAMIC" label="Dynamic Water Surface" help="Dynamic Water Surface" type="boolean" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="FLOW_RESET" label="Reset" help="Reset" type="boolean" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="P_RATE" label="Precipitation [mm]" help="Precipitation [mm]" type="float" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="P_DISTRIB" label="Precipitation" help="Precipitation" type="text" format="text/xml, application/vnd.google-earth.kml+xml" /><param name="P_THRESHOLD" label="Above Elevation" help="Above Elevation" type="float" format="text/xml, application/vnd.google-earth.kml+xml" /></inputs><outputs><data name="FLOW" label="Runoff" /><data name="GAUGES_FLOW" label="Flow at Gauges" /></outputs></tool>